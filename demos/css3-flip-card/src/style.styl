@import 'nib'
startDeg = 20deg
middleDeg = 40deg
endDeg = 180deg

html
  height 100%

body
  height 1px
  min-height 100%

.container
  margin auto
  width 300px
  height 200px
  top 50%
  transform translateY(-50%)
  position relative
  perspective 800px

@keyframes xlive
  100% {transform rotateY(startDeg)}
  50% {transform rotateY(middleDeg)}
  100% {transform rotateY(startDeg)}

@keyframes xflip
  from {transform rotateY(startDeg)}
  to {transform rotateY(endDeg)}

#offer
  width 100%
  height 100%
  postition absloute
  transform-style preserve-3d
  transition transform 1s
  transform rotateY(startDeg)
  animation xlive 1s infinite

#offer .front
#offer .back
  display block
  position absolute
  width 100%
  height 100%
  backface-visibility hidden
  color white
  text-align center
  font-size 28px
  line-height 200px

#offer .front
  background red

#offer .back
  background blue
  transform rotateY(endDeg)

#offer.clicked
  transform rotateY(endDeg)
  animation xflip 1s
